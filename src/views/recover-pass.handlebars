<div class='container-fluid'>
  <div class='row'>
    <div class='col g-0'>
      <div class='bg-image' style='filter: blur(5px);'></div>

      <div class='contenedorPrincipal'>
        <a href='/'><img src='/images/logo.png' class='logo' alt='' /></a>
        <div class='d-flex justify-content-center align-items-center flex-column bg-dark mt-3' style='border-radius: 20px 20px 20px 20px'>
          <div class='tab-content'>
            <div class='tab-pane fade show active' id='pills-login' role='tabpanel' aria-labelledby='tab-login'>
              <form action='/recover-pass' method='post' style='width: 300px; padding: 10px;'>
                <div class='text-center text-white mb-3'>
                  <p>Please give a new pass:</p>

                </div>

                <div class='mb-4'>
                  <div class='form-floating mb-3'>
                    <input value='{{email}}' type='{{email}}' class='form-control border-0 border-bottom border-dark' id='inputEmailRegister' name='email' placeholder='Email' />
                    <label for='input-passwordLogin'><i class=''></i>Mail</label>
                  </div>

                  <div class='form-floating mb-3'>
                    <input value='{{token}}' type='token' class='form-control border-0 border-bottom border-dark' id='inputtokenRegister' name='token' placeholder='token' />
                    <label for='input-passwordLogin'><i class=''></i>Token</label>
                  </div>

                  <div class='form-floating mb-3'>
                    <input type='password' class='form-control border-0 border-bottom border-dark' id='inputpasswordRegister' name='password' placeholder='password' />
                    <label for='input-passwordLogin'><i class=''></i>password</label>
                  </div>

                  <div class='w-100 mt-4 d-flex justify-content-center align-items-center flex-column text-white'>
                    <button type='submit' class='btn btn-danger btn-block mb-4 w-100'>
                      Set new pass!
                    </button>
                    <div class='w-100 d-flex justify-content-between align-items-center flex-column gap-3'>
                      <div class='form-check w-100 d-flex justify-content-center align-items-center'>
                     
                      </div>
                     
                      <div class='row'>
                        <p>Not a member?
                          <a href='/api/sessions/register'>Register</a></p>
                      </div>
                    </div>

                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>